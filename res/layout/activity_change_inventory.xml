<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pharmacymanagement.ChangeInventoryActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:text="药品出入库管理"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="药品名称:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_inventoryMdcName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="数量:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_inventoryMdcNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

      <Button 
          android:id="@+id/bt_inventoryOut"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:text="出库"
          />
       <Button 
          android:id="@+id/bt_inventoryIn"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:text="入库"
          />
    </LinearLayout>

</LinearLayout>